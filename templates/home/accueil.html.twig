{% extends 'base.html.twig' %}

{% block title %}Accueil Ecopratique{% endblock %}

{% block body %}
    <div class="container mt-4 mb-3">
        <h1>Bienvenue sur Ecopratique</h1>
        <div class="row mt-3">
            <h4 class="mb-3">Les derniers articles publiés</h4>
            {% for article in articles %}
                <div class="col-lg-4 mb-3">
                    <div class="card rounded-0 shadow">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <h6>Publié le {{ article.dateArticle ? article.dateArticle|date('d-m-Y') : '' }}</h6>
                            <a href="{{ path('articles_show', {'id': article.id}) }}" class="card-link">Lire...</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}